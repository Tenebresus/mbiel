<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C5C5C"
    tools:context=".filterActivity">

    <Button
        android:id="@+id/Cirkels"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:text="Cirkels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Driehoek"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="12dp"
        android:text="Driehoek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spiegelen"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:text="Spiegelen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cirkels" />

    <Button
        android:id="@+id/zwartwit"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:text="zwart wit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Driehoek" />

    <Button
        android:id="@+id/binary"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:text="binary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spiegelen" />

    <Button
        android:id="@+id/contrast"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:text="contrast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zwartwit" />

    <Button
        android:id="@+id/color_shift"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:text="color shift"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/binary" />

    <Button
        android:id="@+id/neon"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:text="neon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrast" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="40dp"
        android:background="#4E4E4E"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer een filter"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:text="Selecteer een filter" />
</androidx.constraintlayout.widget.ConstraintLayout>